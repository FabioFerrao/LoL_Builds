@model LoL_Builds.ApplicationUser

@{
    ViewBag.Title = Model.Email;
}

<h2 style="color:white">@Model.Email</h2>

<h3 style="color:white">Tem a certeza que quer eliminar @Model.Email?</h3>
<div style="color:white">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Emiminar" class="btn btn-danger" /> |
        @Html.ActionLink("Voltar aos Utilizadores", "Index", null, new { @class = "btn btn-default" })
    </div>
    }
</div>
