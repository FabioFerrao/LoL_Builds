<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LoL Builds - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#080808">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Imagens/logo.png" style="width:150px; height:50px" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Builds", "Index", "Builds")</li>
                    <li>@Html.ActionLink("Items", "Index", "Items")</li>
                    <li>@Html.ActionLink("Champions", "Index", "Champions")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Roles</a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href=@Url.Action("Index", "ChampRoles")>TODAS</a>
                            </li>
                            <li>
                                <a href=@Url.Action("Details", "ChampRoles", new { id = 1 })>SUPPORT</a>
                            </li>
                            <li>
                                <a href=@Url.Action("Details", "ChampRoles", new { id = 2 })>BOT</a>
                            </li>
                            <li>
                                <a href=@Url.Action("Details", "ChampRoles", new { id = 3 })>MID</a>
                            </li>
                            <li>
                                <a href=@Url.Action("Details", "ChampRoles", new { id = 4 })>JUNGLER</a>
                            </li>
                            <li>
                                <a href=@Url.Action("Details", "ChampRoles", new { id = 5 })>TOP</a>
                            </li>
                        </ul>
                    </li>
                    @if (Request.IsAuthenticated && User.IsInRole("Administrador"))
                    {
                        <li class="dropdown">
                            <a href="@Url.Action("Index", "Utilizadores")">Utilizadores</a>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial");
            </div>
        </div>
    </div>

    <div class="container body-content">
        <br />
        @RenderBody()
        <br />
        <footer style="color:white; text-align:right">
            <p>Tecnologias da Internet II - @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>